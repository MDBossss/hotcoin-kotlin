<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_news">

    <fragment
        android:id="@+id/navigation_news"
        android:name="android.tvz.hr.hotcoin.ui.home.HomeFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_bookmarked"
        android:name="android.tvz.hr.hotcoin.ui.dashboard.DashboardFragment"
        android:label="@string/title_bookmarked"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_charts"
        android:name="android.tvz.hr.hotcoin.ui.notifications.NotificationsFragment"
        android:label="@string/title_charts"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="android.tvz.hr.hotcoin.ui.notifications.NotificationsFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_notifications" />
</navigation>